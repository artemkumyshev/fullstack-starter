# =============================================================================
# Docker Compose Environment Variables
# =============================================================================
# Скопируйте этот файл в .env и заполните значениями для вашего окружения

# Database Configuration
DB_NAME=app_cms
DB_USER=app_user
DB_PASSWORD=app_password
DB_PORT=5432
DB_MEMORY_LIMIT=1G
DB_MEMORY_RESERVATION=512M

# Backend Configuration
BACKEND_PORT=3000
BACKEND_REPLICAS=2
BACKEND_MEMORY_LIMIT=1G
BACKEND_MEMORY_RESERVATION=512M
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
LOG_LEVEL=debug

# Frontend Configuration
FRONTEND_PORT=5173
FRONTEND_MEMORY_LIMIT=256M
FRONTEND_MEMORY_RESERVATION=128M
VITE_API_BASE_URL=http://localhost:3000
VITE_APP_TITLE=Fullstack Application
VITE_APP_DESCRIPTION=Fullstack Starter Template Application
VITE_APP_VERSION=0.0.1

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Swagger Configuration
SWAGGER_TITLE=Fullstack Starter API
SWAGGER_DESCRIPTION=Fullstack Starter Template API Documentation
SWAGGER_VERSION=1.0
SWAGGER_PATH=api/docs

# Health Check Configuration
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=2000
HOST=localhost

# pgAdmin Configuration
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
PGADMIN_SERVER_MODE=False
PGADMIN_MASTER_PASSWORD_REQUIRED=False
PGADMIN_MEMORY_LIMIT=512M
PGADMIN_MEMORY_RESERVATION=256M

# Nginx Configuration (for production)
NGINX_SERVER_NAME=localhost
NGINX_BACKEND_HOST=backend
NGINX_BACKEND_PORT=3000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
NGINX_SECURITY_CONTACT=artemkumyshev@gmail.com

# Load Balancer Configuration
HAPROXY_PORT=8080
HAPROXY_STATS_PORT=9000

# Container Names (optional, defaults provided)
BACKEND_CONTAINER_NAME=app-cms-backend
FRONTEND_CONTAINER_NAME=app-cms-frontend
DATABASE_CONTAINER_NAME=app-cms-db
PGADMIN_CONTAINER_NAME=app-cms-pgadmin
LOADBALANCER_CONTAINER_NAME=app-cms-lb

# Nginx Configuration (for production frontend)
NGINX_SERVER_NAME=localhost
NGINX_BACKEND_HOST=backend
NGINX_BACKEND_PORT=3000
NGINX_SECURITY_CONTACT=artemkumyshev@gmail.com
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Resource Limits (for production)
DB_MEMORY_LIMIT=1G
DB_MEMORY_RESERVATION=512M
BACKEND_MEMORY_LIMIT=1G
BACKEND_MEMORY_RESERVATION=512M
BACKEND_REPLICAS=2
FRONTEND_MEMORY_LIMIT=256M
FRONTEND_MEMORY_RESERVATION=128M
PGADMIN_MEMORY_LIMIT=512M
PGADMIN_MEMORY_RESERVATION=256M

# Load Balancer Configuration
LOADBALANCER_CONTAINER_NAME=app-cms-lb
HAPROXY_PORT=8080
HAPROXY_STATS_PORT=9000

# pgAdmin Additional Configuration
PGADMIN_SERVER_MODE=False
PGADMIN_MASTER_PASSWORD_REQUIRED=False
