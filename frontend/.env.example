# =============================================================================
# Frontend Environment Variables
# =============================================================================
# Скопируйте этот файл в .env и заполните значениями для вашего окружения
# Примечание: Vite требует префикс VITE_ для переменных, доступных в клиентском коде

# API Configuration
VITE_API_BASE_URL=http://localhost:3000

# Application Configuration
VITE_APP_TITLE=Fullstack Application
VITE_APP_VERSION=0.0.1

# Feature Flags (optional)
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true

# Development Server Configuration (only for vite.config.ts)
# PORT=5173
# HOST=localhost

# Development Server Configuration
VITE_HOST=localhost
VITE_PORT=5173
VITE_STRICT_PORT=false

# Application Metadata
VITE_APP_DESCRIPTION=Fullstack Starter Template
